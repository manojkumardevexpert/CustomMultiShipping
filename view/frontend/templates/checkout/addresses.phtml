require(['jquery'], function($) {
    
    function addSameProductViaAjax(quoteItemId, qty) {
        // AJAX request
        $.ajax({
            url: '/custom_multishipping/index/index',
            type: 'POST',
            dataType: 'json',
            data: {
                quote_item_id: quoteItemId,
